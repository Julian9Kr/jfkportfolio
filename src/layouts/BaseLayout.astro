    <style>
      * {
        box-sizing: border-box;
      }
      body {
        margin: 0;
        font-family: -apple-system, BlinkMacSystemFont, sans-serif;
        background: #0e0e0e;
        color: white;
        overflow-x: hidden;
      }
      .hero {
        position: relative;
        width: 100%;
        height: 80vh;
        overflow: hidden;
      }
      .hero img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
      .hero-text {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: white;
        background: rgba(0, 0, 0, 0.4);
        padding: 1rem 2rem;
        border-radius: 12px;
        text-align: center;
      }
      .hero-text h1 {
        margin: 0;
        font-size: 2rem;
      }
      .gallery {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 2rem;
        padding: 4rem 2rem;
        max-width: 1400px;
        margin: 0 auto;
      }
      .image-wrapper img {
        width: 100%;
        height: auto;
        aspect-ratio: 16 / 9;
        object-fit: cover;
        border-radius: 12px;
      }
      @media (max-width: 1024px) {
        .gallery {
          grid-template-columns: repeat(2, 1fr);
        }
      }
      @media (max-width: 640px) {
        .gallery {
          grid-template-columns: 1fr;
        }
      }
    </style>
